@using Microsoft.AspNet.Identity
@using TreinamentoAspNet02.App_Start
@{
    ViewBag.Title = "Área dos consultores";
}
<h2>Bem vindo @User.Identity.GetName()</h2>

<link href="~/Content/sweetalert.css" rel="stylesheet" />

<label class="control-label">Seu Id de visitante</label>
<br />
<input type="text" id="visitante" />
<div class="form-group col-xl-12">
    <label class="control-label">Seu Id de Conexão</label><br />
    <input type="text" class="col-lg-12 text-primary" id="connId" readonly />

    <label class="control-label">Your Message</label><br />
    <input type="text" class="col-lg-10 text-primary" id="message">&nbsp;&nbsp;&nbsp;&nbsp;

    <input type="button" class="btn btn-primary" id="sendmessage" value="Send" /><br /><br />
    <div class="container chatArea">
        <input type="hidden" id="displayname" />
        <ul id="discussion"></ul>
    </div>
</div>
<br>
<input type="hidden" id="nomeConsultor" value="@User.Identity.GetName()" />

@section scripts {
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <script src="~/Content/sweetalert.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script>
        var nomeConsultor = '';
        var connexao = '';
        $(function () {
            var chat = $.connection.chatHub;

            chat.client.addNewMessageToPage = function (name, message) {
                $('#discussion').append('<li><strong>' + htmlEncode(name) + '</strong>: ' + htmlEncode(message) + '</li>');
            };

            $('#message').focus();
            $('#message').keypress(function (e) {
                if (e.which == 13) {//Enter key pressed
                    $('#sendmessage').trigger('click');//Trigger search button click event
                }
            });

            $.connection.hub.start().done(function () {
                console.log($.connection.hub.id);
                $('#connId').val($.connection.hub.id);
                $('#sendmessage').click(function () {
                    var id = $('#visitante').val();
                    chat.server.send($('#nomeConsultor').val(), $('#message').val(), id);
                    // Clear text box and reset focus for next comment.
                    $('#discussion').append('<li><strong>' + htmlEncode($('#nomeConsultor').val())
                        + '</strong>: ' + htmlEncode($('#message').val()) + '</li>');
                    $('#message').val('').focus();
                })
            })

        })
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}