@{
    ViewBag.Title = "Chat";
}

<h2>Chat</h2>

<div class="container">
    <label>
        grupo:
        <select id="grupo">
            <option value="todos">Todos</option>
            <option value="adm">Administradores</option>
            <option value="usuario">Usuarios</option>
        </select>
    </label>
    <input type="text" id="message" />
    <input type="button" id="sendmessage" value="Send" />
    <input type="hidden" id="displayname" />
    <ul id="discussion">
    </ul>
</div>

@section scripts {
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script>
        $(function () {
            // Reference the auto-gererated proxy for the hub
            var chat = $.connection.chatHub;
            var grupoAtual = 'todos';

            // Create a function that the hub can call back to display messages.
            chat.client.addNewMessageToPage = function (name, message) {
                // Add the message to the page
                $('#discussion').append('<li><strong>' + htmlEncode(name) + '</strong>: ' + htmlEncode(message) + '</li>');
            };
            //chat.adicionarMensagem = function (message) {
            //    $('#discussion').append('<li>' + message + '</li>');
            //};

            // Get the user name and store it to prepend to messages.
            $('#displayname').val(prompt('Enter your name:', ''));

            // Set initial focus to message input box.
            $('#message').focus();

            $('#grupo').change(function () {
                chat.server.removeGrupo(grupoAtual);
                grupoAtual = $('#grupo').val();
                chat.server.adicionaGrupo(grupoAtual);
            });

            // Start de connection.
            $.connection.hub.start().done(function () {
                chat.server.adicionaGrupo(grupoAtual);

                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
                    chat.server.send($('#displayname').val(), $('#message').val(), grupoAtual);

                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
                });
            });
        });

        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}